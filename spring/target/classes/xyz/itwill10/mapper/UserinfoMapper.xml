<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.itwill10.mapper.UserinfoMapper">
	<insert id="insertUserinfo">
		insert into userinfo values(#{userid}, #{password}, #{name}, #{email}, #{status});
	</insert>
	
	<!-- 동적 SQL을 사용하여 각각의 필드값에 변경값이 없을 경우 원래의 값이 저장될 수 있도록 작성 -->
	<update id="updateUserinfo">
		update userinfo
		<set>
			<if test="password != null and password != ''">
				password=#{password}
			</if>
			<if test="name != null and name != ''">
				name=#{name}
			</if>
			<if test="email != null and email != ''">
				email=#{email}
			</if>
			<if test="status == 1 or status == 9">
				status=#{status}
			</if>
		</set>
	</update>
	
	<delete id="deleteUserinfo">
		delete from userinfo where userid=#{userid}
	</delete>
	
	<select id="selectUserinfo" resultType="Userinfo">
		select userid, password, name, email, status from userinfo where userid=#{userid}
	</select>
	
	<select id="selectUserinfoList" resultType="Userinfo">
		select userid, password, name, email, status from userinfo order by userid desc
	</select>
</mapper>